{
    "description" : "Runs Nagios Plugins to fetch metrics from a host",
    "command" : "bash nagios_plugin.sh",
    "ignore" : "node_modules",

    "metrics" : [ "DISK_FREE_SPACE",
                  "SSH_RESPONSE_TIME",
                  "LOAD_1_MINUTE",
                  "LOAD_5_MINUTE",
                  "LOAD_15_MINUTE"],

    "paramArray" : { "itemTitle" : ["source"], "schemaTitle" : "Check"},
    "paramSchema" : [
        {
            "title" : "Poll Time (sec)",
            "name" : "pollInterval",
            "description" : "The Poll Interval to call the Nagios plugin. Defaults 5 seconds",
            "type" : "string",
            "default" : 5,
            "required" : false
        },
        {
            "title" : "Nagios Plugin Directory",
            "name" : "pluginDirectory",
            "description" : "Directory where the Nagios plugins reside",
            "type" : "string",
            "default" : "",
            "required" : true
        },
        {
            "title": "Nagios Plugin",
            "name": "plugin",
            "description": "Name of the Nagios plugin to run",
            "type" : { "enum" : [
                      ["check_apt","check_apt"],
                      ["check_breeze","check_breeze"],
                      ["check_by_ssh","check_by_ssh"],
                      ["check_clamd","check_clamd"],
                      ["check_cluster","check_cluster"],
                      ["check_dhcp","check_dhcp"],
                      ["check_disk","check_disk"],
                      ["check_disk_smb","check_disk_smb"],
                      ["check_file_age","check_file_age"],
                      ["check_flexlm","check_flexlm"],
                      ["check_ftp","check_ftp"],
                      ["check_http","check_http"],
                      ["check_icmp","check_icmp"],
                      ["check_ide_smart","check_ide_smart"],
                      ["check_ifoperstatus","check_ifoperstatus"],
                      ["check_ifstatus","check_ifstatus"],
                      ["check_imap","check_imap"],
                      ["check_ircd","check_ircd"],
                      ["check_jabber","check_jabber"],
                      ["check_load","check_load"],
                      ["check_log","check_log"],
                      ["check_mailq","check_mailq"],
                      ["check_mrtg","check_mrtg"],
                      ["check_mrtgtraf","check_mrtgtraf"],
                      ["check_nagios","check_nagios"],
                      ["check_nntp","check_nntp"],
                      ["check_nntps","check_nntps"],
                      ["check_nt","check_nt"],
                      ["check_ntp","check_ntp"],
                      ["check_ntp_peer","check_ntp_peer"],
                      ["check_ntp_time","check_ntp_time"],
                      ["check_nwstat","check_nwstat"],
                      ["check_oracle","check_oracle"],
                      ["check_overcr","check_overcr"],
                      ["check_ping","check_ping"],
                      ["check_pop","check_pop"],
                      ["check_procs","check_procs"],
                      ["check_real","check_real"],
                      ["check_rpc","check_rpc"],
                      ["check_sensors","check_sensors"],
                      ["check_simap","check_simap"],
                      ["check_smtp","check_smtp"],
                      ["check_spop","check_spop"],
                      ["check_ssh","check_ssh"],
                      ["check_ssmtp","check_ssmtp"],
                      ["check_swap","check_swap"],
                      ["check_tcp","check_tcp"],
                      ["check_time","check_time"],
                      ["check_udp","check_udp"],
                      ["check_ups","check_ups"],
                      ["check_uptime","check_uptime"],
                      ["check_users","check_users"],
                      ["check_wave","check_wave"]]},
            "required": true
        },
        {
            "title": "Arguments",
            "name": "arguments",
            "description": "Specific arguments to pass to the Nagios plugin",
            "type": "string",
            "required": false
        }
    ]
}
